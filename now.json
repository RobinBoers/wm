{
  "version": 2,
  "alias": "webmention.app",
  "routes": [
    {
      "src": "/check/(.*)",
      "dest": "/routes/check.js?url=$1",
      "methods": ["GET", "POST"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "methods": ["GET"],
      "src": "^/",
      "dest": "/dist/index.html"
    },
    {
      "methods": ["GET"],
      "src": "^/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "builds": [
    { "src": "/routes/*.js", "use": "@now/node" },
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "dist" }
    }
  ]
}
