{
  "version": 2,
  "alias": "webmention.app",
  "routes": [
    {
      "src": "/check/(.*)",
      "dest": "/routes/check.js?url=$1",
      "methods": ["GET", "POST"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/",
      "dest": "/static/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/static/$1.html"
    }
  ],
  "builds": [
    { "src": "/routes/*.js", "use": "@now/node" },
    { "src": "/static/*", "use": "@now/static" }
  ]
}
